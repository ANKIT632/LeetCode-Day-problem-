class Solution {
 public static int maxArea(int[] height) {
        int sIdx=0;
        int eIdx=height.length-1;
        int sum=0;
        int temp=0;
    
        for(int i=0;i<height.length;i++){
            if(sIdx==eIdx || eIdx<sIdx){
                return sum;
            }
            else{ 
                if(height[sIdx]<height[eIdx] ){
                    temp=(eIdx-sIdx)*height[sIdx];
                    sIdx++;
                }

                else{
                   temp=(eIdx-sIdx)*height[eIdx];  
                   eIdx--;
                }
            }

            if(sum<=temp){
                sum=temp;
                temp=0;
            }
        }
        return sum;
    }
}
